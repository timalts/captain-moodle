@model CaptaineMoodle.Models.Payment
@using CaptaineMoodle.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@if (User.IsInRole("Student") && Model.UserId == @UserManager.GetUserId(User))
{
    <h1>Details</h1>

    <div>
        <h4>Payment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Semester)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Semester)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paid)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

}
else if (User.IsInRole("Admin"))
{
    <h1>Details</h1>

    <div>
        <h4>Payment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Semester)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Semester)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paid)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
<p>You can only see the details of your own payments.</p>
}
