@using CaptaineMoodle.ViewModels
@model CreateCourseViewModel

@{
    ViewBag.Title = "Create New Course";
}

<form asp-action="CreateCourse" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Start" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Start" class="form-control" placeholder="Start">
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="End" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="End" class="form-control" placeholder="End">
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Role
            </button>
        </div>
    </div>
</form>

