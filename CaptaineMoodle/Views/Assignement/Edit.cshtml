@model CaptaineMoodle.Models.Assignement

@using CaptaineMoodle.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

@{ ViewData["Title"] = "Edit";}

<h1>Edit</h1>

<h4>Assignement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>




            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10" style="padding-left : 50px">
                    <input asp-for="Description" class="form-control"  placeholder="Description">
                    <span asp-validation-for="Description" class="text-danger" ></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Grade" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Grade" class="form-control" placeholder="Grade">
                    <span asp-validation-for="Grade" class="text-danger"></span>
                </div>
            </div>


            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CourseId" />
            <input type="hidden" asp-for="StudentId" />
            <input type="hidden" asp-for="TeacherId" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

