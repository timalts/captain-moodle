@using CaptaineMoodle.ViewModels
@model CreateAssignementViewModel

@{
    ViewBag.Title = "Create New Assignement";
}

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label"></label>
        @Html.DropDownList("Course",new SelectList(@ViewBag.courses), "Select course", new {@class = "form-control"})
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Grade" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Grade" class="form-control" placeholder="Grade">
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Assignement
            </button>
        </div>
    </div>

</form>

