@model CaptaineMoodle.Models.ExamCourseModel

@using CaptaineMoodle.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

@{ ViewData["Title"] = "Edit";}

@if (User.IsInRole("Admin") || Model.exam.CreatorId == @UserManager.GetUserId(User))
{
    <h1>Edit</h1>

    <h4>Course</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="exam.Id" />
                <input type="hidden" asp-for="exam.CourseId" />
                <input type="hidden" asp-for="exam.CreatorId" />
                <div class="form-group">
                    <label asp-for="exam.Description" class="control-label"></label>
                    <input asp-for="exam.Description" class="form-control" />
                    <span asp-validation-for="exam.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="exam.Start" class="control-label"></label>
                    <input asp-for="exam.Start" class="form-control" />
                    <span asp-validation-for="exam.Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="exam.End" class="control-label"></label>
                    <input asp-for="exam.End" class="form-control" />
                    <span asp-validation-for="exam.End" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <p>You can only edit your own exams.</p>
}

