@model CaptaineMoodle.Models.ExamCourseModel
@using CaptaineMoodle.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager

@{ ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@if (User.IsInRole("Admin") || Model.exam.CreatorId == @UserManager.GetUserId(User))
{
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Exam</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.course.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.exam.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.exam.Start)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.exam.End)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="exam.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
}
else
{
    <p>You can only delete your own exams.</p>
}
